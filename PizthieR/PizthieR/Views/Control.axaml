<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PizthieR.Control">
	<Grid>
		<Grid.RowDefinitions> 
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="3*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		
		<Grid Grid.Row="0" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			
			<Button Content="Start" Name="StartFour" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
			<Button Content="Stop" Name="StopFour" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
			
		</Grid>
		
		<TextBox Text="Consigne température" Name="ConsigneTemperature" Grid.Row="2" Grid.Column="0"/>
		<Button Content="Publier température" Name="PublierTemperature"  Grid.Row="3" Grid.Column="0"/>
		
		<TextBox Text="Température max" Name="TempératureMax"  Grid.Row="5" Grid.Column="0"/>
		<Button Content="Publier température max" Name="PublierTemperatureMax" Grid.Row="6" Grid.Column="0"/>
		
		<Grid Grid.Row="8" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Text="Etat Four :"  Grid.Column="0" />
			<TextBlock Text="Etat" Name="Etatfour" Grid.Column="1" />

		</Grid>
		<Grid Grid.Row="10" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Text="Etat régule :" Grid.Column="0" />
			<TextBlock Text="Etat" Name="EtatRégule" Grid.Column="1" />

		</Grid>
		<Grid Grid.Row="12" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Text="Mode fonctionnement:" TextWrapping="Wrap" Grid.Column="0" />
			<TextBlock Text="Etat" Name="ModeFonctionnement" Grid.Column="1" />

		</Grid>
	</Grid>
		
</UserControl>
