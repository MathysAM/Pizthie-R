<UserControl
    x:Class="PizthieR.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="1000"
    d:DesignHeight="600">

	<Grid RowDefinitions="Auto,*">

		<!-- Barre supérieure -->
		<Border Padding="8">
			<Grid ColumnDefinitions="Auto,*,Auto">
				<!-- Bouton hamburger -->
				<ToggleButton x:Name="HamburgerBtn"
							  Content="☰"
							  Width="36" Height="36"
							  HorizontalAlignment="Left"
							  VerticalAlignment="Center"
							  ToolTip.Tip="Menu"/>
				<!-- Titre -->
				<TextBlock Grid.Column="1"
						   Text="PIZZA THIERRY"
						   FontSize="18"
						   VerticalAlignment="Center"/>
			</Grid>
		</Border>

		<!-- Zone principale avec menu repliable -->
		<SplitView x:Name="AppSplitView"
				   Grid.Row="1"
				   IsPaneOpen="{Binding IsChecked, ElementName=HamburgerBtn}"
				   DisplayMode="Overlay"
				   CompactPaneLength="48"
				   OpenPaneLength="240">

			<!-- PANE : Menu -->
			<SplitView.Pane>
				<Border Padding="8">
					<StackPanel Spacing="8">
						<Button Content="Connection"
								Name="Bconnection"
								FontSize="16"
								HorizontalAlignment="Stretch"
								Click="ViewConnection_Click"/>
						<Button Content="Control"
								Name="BControl"
								FontSize="16"
								HorizontalAlignment="Stretch"
								Click="ViewControl_Click"/>
						<Button Content="Programmation"
								Name="BProgrammation"
								FontSize="16"
								HorizontalAlignment="Stretch"
								Click="ViewProgrammation_Click"/>
					</StackPanel>
				</Border>
			</SplitView.Pane>

			<!-- CONTENU -->
			<Border Margin="8" Padding="8">
				<ContentControl x:Name="Frame"/>
			</Border>
		</SplitView>

	</Grid>
</UserControl>
