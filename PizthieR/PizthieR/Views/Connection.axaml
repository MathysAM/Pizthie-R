<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PizthieR.Connection">

	<Grid>
		<Grid.RowDefinitions>
			
			<RowDefinition Height ="1*"/>
			<!-- 2 parts -->
			<RowDefinition Height="1*"/>
			<!-- 3 parts -->
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="5*"/>

		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<!-- 50% de la largeur -->
			<ColumnDefinition Width="1*"/>
			<!-- 50% -->
			<ColumnDefinition Width="1*"/>
			
		</Grid.ColumnDefinitions>
		
		<TextBlock Name="Status" Text="Connection" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0"/>
		<TextBox Name="ID" Text="ID" Grid.Row="1" Grid.Column="0"/>
		<TextBox Name="MDP" PasswordChar="*" Watermark="Mot de passe..." Grid.Row="2" Grid.Column="0"/>
		<Grid Grid.Row="3" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<!-- 50% de la largeur -->
				<ColumnDefinition Width="1*"/>
				
				<Button Content="Connection" Click="Connection_Click" Grid.Column="0"/>
				<Button Content="DeConnection" Click="DeConnection_Click" Grid.Column="1"/>

			</Grid.ColumnDefinitions>
		</Grid>
		
		
	</Grid>
	

            
             
	

</UserControl>
