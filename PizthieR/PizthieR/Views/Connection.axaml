<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PizthieR.Connection">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="5*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<TextBlock x:Name="Status" Text="Connexion" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0"/>

		<TextBox   x:Name="ID"  Watermark="ID"  Grid.Row="1" Grid.Column="0"/>
		<TextBox   x:Name="MDP" PasswordChar="*" Watermark="Mot de passe..." Grid.Row="2" Grid.Column="0"/>

		<!-- Grille interne : colonnes déclarées, puis les boutons (hors ColumnDefinitions) -->
		<Grid Grid.Row="3" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0" Content="Connexion"   x:Name="BtnConnect" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
			<Button Grid.Column="1" Content="Déconnexion" x:Name="BtnDisconnect" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		</Grid>
	</Grid>
	

            
             
	

</UserControl>
